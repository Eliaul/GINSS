<UserControl
    x:Class="Ginss.Wpf.View.ScatterChartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Ginss.Wpf.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sync="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Rectangle Fill="White" Opacity="0.5" />
        <sync:SfChart
            x:Name="chart"
            Padding="0,0,20,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            ClipToBounds="True">
            <sync:SfChart.Legend>
                <sync:ChartLegend />
            </sync:SfChart.Legend>
            <sync:SfChart.PrimaryAxis>
                <sync:NumericalAxis Header="Test" />
            </sync:SfChart.PrimaryAxis>
            <sync:SfChart.SecondaryAxis>
                <sync:NumericalAxis />
            </sync:SfChart.SecondaryAxis>
            <sync:ScatterSeries
                ItemsSource="{Binding LocalCoordinates}"
                XBindingPath="EastCoordinate"
                YBindingPath="NorthCoordinate" />
        </sync:SfChart>
    </Grid>
</UserControl>
